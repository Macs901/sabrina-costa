{
  "version": 2,
  "buildCommand": "echo 'Frontend build complete'",
  "outputDirectory": ".",
  "installCommand": "echo 'No install needed'",
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "https://sabrina-costa-backend.vercel.app/api/$1"
    }
  ],
  "redirects": [
    {
      "source": "/",
      "destination": "/index.html",
      "permanent": false
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ]
}
